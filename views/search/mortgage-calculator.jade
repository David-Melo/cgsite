#mortgage-calculator.modal.fade
    .modal-dialog(style="width:420px")
        .modal-content
            .modal-header
                button.close(type='button', data-dismiss='modal', aria-hidden='true') x
                h4.modal-title Mortgage Calculator
            .modal-body.clearfix
                .form-horizontal.clearfix.add-bottom
                    .form-group
                        label.col-sm-4.control-label(for='baseprice') Base Price
                        .col-sm-8
                            .input-group
                                span.input-group-addon $
                                input#baseprice.form-control(data-bind="value: Globalize.format(parseInt(mortgage.data.baseprice()),'n0')")
                    .form-group
                        label.col-sm-4.control-label(for='downpayment') Down Payment
                        .col-sm-8
                            .input-group
                                input#downpayment.form-control(type='number',step="1",max="100",data-bind="value: Globalize.format(mortgage.data.downpayment,'n0')")
                                span.input-group-addon %
                    .form-group
                        label.col-sm-4.control-label(for='loanamount') Loan Amount
                        .col-sm-8
                            .input-group
                                span.input-group-addon $
                                input#loanamount.form-control(disabled,data-bind="value: Globalize.format(parseInt(mortgage.data.loanamount()),'n0')")
                    .form-group
                        label.col-sm-4.control-label(for='interest') Interest Rate
                        .col-sm-8
                            .input-group
                                input#interest.form-control(type='number',step=".5",max="100",data-bind="value: Globalize.format(mortgage.data.interest,'n1')")
                                span.input-group-addon %
                    .form-group.remove-bottom
                        label.col-sm-4.control-label(for='years') Loan Term
                        .col-sm-8
                            .input-group
                                input#years.form-control(type='number',step="1",data-bind="value: Globalize.format(mortgage.data.years,'n0')")
                                span.input-group-addon years
                hr.add-bottom
                h1.listing-price.pull-right(data-bind="text: Globalize.format(my.vm.mortgage.data.payments(),'c2')")
                h1.subtitle Estimated Monthly Payments
                .clearfix
                .text-center
                    small (Principal and Interest, Taxes and Insurance not Included)
            .modal-footer
                button.btn.btn-primary(type='button', data-dismiss='modal') Close Window