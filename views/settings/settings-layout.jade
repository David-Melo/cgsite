.layout-settings

   .header(data-bind="affix: { top: 50, sibling: '.page-content' }")

      ol.breadcrumb
         li
            a Admin Home
         li Settings
         li Site Layout

      .content-header.panel.panel-default
         .panel-body

            .content-header-title
               h1 Website Layout

   .page-content.inset

      .row(data-bind="foreach: layouts.data.types")

         .col-md-6
            .preview.panel(data-bind="css: ($root.sites.data.current().data.layout() === id)? 'panel-success' : 'panel-default'")
                .panel-heading
                    span(data-bind="text: name")
                    span.small(data-bind=" text: ($root.sites.data.current().data.layout() === id)? ' (Currently Selected)' : '' ")
                .panel-body

                     div.thumbnail(data-bind="html: template")
                     p.add-bottom(data-bind="text: description")

                     // ko ifnot: $root.sites.data.current().data.layout() === id
                     button.btn.btn-primary.btn-block(data-bind="click: $root.layouts.utils.select") Select This Layout
                     // /ko

                     // ko if: $root.sites.data.current().data.layout() === id
                     button.btn.btn-success.btn-block.disabled(data-bind="click: $root.layouts.utils.select") Current Layout
                     // /ko